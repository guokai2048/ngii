                <tr>
                    <td class="formTitle">文件类型</td>
                    <td class="formValue">
                        @*<input id="picType" type="text" class="form-control" />*@
                       <div id="picType" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>

