@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_LayoutIndexEasyui.cshtml";
}
<script>
    var depID = request('depID');
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //重设toolbar
        $(".toolbar").css("padding-left", $('.titlePanel').width() - $('.toolbar').width() - 30);
    }
    //加载树00000
    var _itemId = "";
    var _itemName = "";
    var _isTree = "";
    var _hasChildren = true;
    var organizeId = '';
    function GetTree() {
        //取第一个公司的ID
        for (var property in top.clientorganizeData) {
            if (organizeId == '') {
                organizeId = property;
            }
        }
        var item = {
            height: $(window).height() - 52,
            url: "../../BaseManage/Department/GetOrganizeTreeJson?keyword="+depID,
            onnodeclick: function (item) {
                if (item.id == organizeId) {
                    _itemId = "";
                } else {
                    _itemId = item.id;
                }
                _itemName = item.text;
                _isTree = item.isTree;
                _hasChildren = item.hasChildren;
                $("#titleinfo").html(_itemName);
                $("#txt_Keyword").val("");
                $('#btn_Search').trigger("click");
            }
        };
        //初始化itemTree
        $("#itemTree").treeview(item);
    }
    //加载表格
    function GetGrid() {
        var $gridTable = $('#gridTable');
        $gridTable.datagrid({
            fit: true,
            idField: 'UserId',
            rownumbers: true,
            sortName: 'UserId',
            sortOrder: 'desc',
            singleSelect: false,
            nowrap: false,
            emptyMsg: '<div style="color:red;padding:4px;border-bottom:#ccc 1px solid;">无相关数据!</div>',
            columns: [[
                { title: '主键', field: 'UserId', checkbox: true },
                { title: '账号', field: 'Account', width: 100, align: 'left', sortable: true },
                { title: '姓名', field: 'RealName', width: 100, align: 'left', sortable: true },
                
                { title: '默认轧机机台', field: 'zhaJiTai', width: 80, align: 'left', sortable: true },
                { title: '默认分切机台', field: 'fenJiTai', width: 80, align: 'left', sortable: true },
                { title: '默认班次', field: 'banCi', width: 80, align: 'left', sortable: true },
                { title: '默认操作手', field: 'opeName', width: 80, align: 'left', sortable: true },


                { title: '手机', field: 'Mobile', width: 100, align: 'center', sortable: true },
                {
                    title: '分类', field: 'DepartmentId', width: 100, align: 'left',
                    formatter: function (value, row, index) {
                        return top.clientdepartmentData[value] == null ? "" : top.clientdepartmentData[value].FullName;
                    }
                },
                {
                    title: "状态", field: "EnabledMark", width: 50, align: "center",
                    formatter: function (value, row, index) {
                        if (value == 1) {
                            return '<span onclick=\"btn_disabled(\'' + row.UserId + '\')\" class=\"label label-success\" style=\"cursor: pointer;\">正常</span>';
                        } else if (value == 0) {
                            return '<span onclick=\"btn_enabled(\'' + row.UserId + '\')\" class=\"label label-default\" style=\"cursor: pointer;\">禁用</span>';
                        }
                    }
                },
                {
                    title: "系统用户", field: "IsSystem", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                }
            ]]
        });
        //$gridTable.authorizeColModel();
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val(),
                departmentId: _itemId
            }
            //取消选择
           // $gridTable.datagrid('unselectAll');
           // $gridTable.datagrid('uncheckAll');

            $gridTable.datagrid({
                url: "../../BaseManage/User/GetPageListJson",
                pagination: true,
                pageSize: 50,
                pageList: [50, 100, 200],
                queryParams: {
                    queryJson: JSON.stringify(queryJson)
                },
            });
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    function getSelecteds(callback) {
        //获取多选到的id集合
        var rows = $("#gridTable").datagrid("getChecked");

        callback(JSON.stringify(rows));
        dialogClose();
    }
</script>
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'west',split:true" style="width: 200px;">
        <div class="west-Panel">
            <div class="panel-Title">分类</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div data-options="region:'center',border:false" style="background:#fafafa;">
        <div class="easyui-layout" data-options="fit:true">
            <div data-options="region:'north',border:false" style="height:92px;overflow: hidden;">
                <div class="panel-Title">
                    分类 - <span id="titleinfo">未选择分类</span>
                </div>

                <div class="titlePanel">
                    <!-- 注：position必须修改为fixed，下拉菜单才不会被隐藏-->
                    <div class="title-search" style="position:fixed;z-index:2;">
                        <table>
                            <tr>
                                <td>
                                    <div id="queryCondition" class="btn-group">
                                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a data-value="Account">账户</a></li>
                                            <li><a data-value="RealName">姓名</a></li>
                                            <li><a data-value="Mobile">手机</a></li>
                                        </ul>
                                    </div>
                                </td>
                                <td style="padding-left: 2px;">
                                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                                </td>
                                <td style="padding-left: 5px;">
                                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div data-options="region:'center',border:false">
                <table id="gridTable"></table>
            </div>
        </div>
     </div>
</div>