@{;
    ViewBag.Title = "用户员工表:列表页面";
    Layout = "~/Views/Shared/_LayoutIndexEasyui.cshtml";
}
<script>
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //重设toolbar
        $(".toolbar").css("padding-left", $('.titlePanel').width() - $('.toolbar').width() - 30);
    }
    //加载树00000
    var _itemId = "";
    var _itemName = "";
    var _isTree = "";
    var _hasChildren = true;
    var organizeId = '';
    function GetTree() {
        //取第一个公司的ID
        for (var property in top.clientorganizeData) {
            if (organizeId == '') {
                organizeId = property;
            }
        }
        var item = {
            height: $(window).height() - 52,
            url: "../../BaseManage/Department/GetOrganizeTreeJson",
            onnodeclick: function (item) {
                if (item.id == organizeId) {
                    _itemId = "";
                } else {
                    _itemId = item.id;
                }
                _itemName = item.text;
                _isTree = item.isTree;
                _hasChildren = item.hasChildren;
                $("#titleinfo").html(_itemName);
                $("#txt_Keyword").val("");
                $('#btn_Search').trigger("click");
            }
        };
        //初始化itemTree
        $("#itemTree").treeview(item);
    }
    //加载表格
    function GetGrid() {
        var $gridTable = $('#gridTable');
        $gridTable.datagrid({
            fit: true,
            idField: 'UserId',
            rownumbers: true,
            emptyMsg: '<div style="color:red; padding:4px; border-bottom:#ccc 1px solid;">无相关数据!</div>',
            sortName: 'CreateDate',
            sortOrder: 'desc',
            singleSelect: true,
            nowrap: true,
            pagination: true,
            pageSize: 100,
            pageList: [100, 500, 1000, 3000],
            url: "../../BaseManage/Person/GetDataGridJson",
            queryParams: getSoSo(),
            columns: [[
                { title: '员工主键', field: 'UserId', checkbox: true },
                { title: '机构主键', field: 'OrganizeId', width: 50, align: 'left', sortable: true, hidden: true },
                { title: '部门主键', field: 'DepartmentId', width: 50, align: 'left', sortable: true, hidden: true },

                //{ title: '员工工号', field: 'EnCode', width: 50, align: 'left', sortable: true, hidden: false },
                { title: '真实姓名', field: 'RealName', width: 80, align: 'left', sortable: true, hidden: false },

                { title: '身份证', field: 'carCode', width: 80, align: 'left', sortable: true, hidden: false },
                {
                    title: '性别', field: 'Gender', width: 40, align: 'left', sortable: true, hidden: false,
                    formatter: function (value, row, index) {
                        if (value == "1") { return "男" }
                        if (value == "0") { return "女" }

                    }
                },
                { title: '生日', field: 'Birthday', width: 80, align: 'left', sortable: true, hidden: true },
                { title: '手机', field: 'Mobile', width: 80, align: 'left', sortable: true, hidden: false },
                { title: '电话', field: 'Telephone', width: 80, align: 'left', sortable: true, hidden: false },
                { title: '电子邮件', field: 'Email', width: 80, align: 'left', sortable: true, hidden: false },
                //{ title: '删除标记', field: 'DeleteMark', width: 80, align: 'left', sortable: true, hidden: true },
                //{
                //    title: '有效标志', field: 'EnabledMark', width: 80, align: 'left', sortable: true, hidden: false,
                //    formatter: function (value, row, index) {
                //        if (value == "1") { return "有效" }
                //    }
                //},
                //{
                //    title: '登录用户', field: 'IsUser', width: 80, align: 'left', sortable: true, hidden: false,
                //    formatter: function (value, row, index) {
                //        if (value == "1") { return "是" }
                //    }
                //},
                //{ title: '入职时间', field: 'RuZhiTime', width: 130, align: 'left', sortable: true, hidden: false },
                //{ title: '离职时间', field: 'LiZhiTime', width: 120, align: 'left', sortable: true, hidden: false },
                { title: '备注', field: 'Description', width: 80, align: 'left', sortable: true, hidden: false },

                { title: '创建日期', field: 'CreateDate', width: 130, align: 'left', sortable: true, hidden: false },
                { title: '创建用户主键', field: 'CreateUserId', width: 80, align: 'left', sortable: true, hidden: true },
                { title: '创建用户', field: 'CreateUserName', width: 80, align: 'left', sortable: true, hidden: false },
                { title: '修改日期', field: 'ModifyDate', width: 130, align: 'left', sortable: true, hidden: false },
                { title: '修改用户主键', field: 'ModifyUserId', width: 80, align: 'left', sortable: true, hidden: true },
                { title: '修改用户', field: 'ModifyUserName', width: 80, align: 'left', sortable: true, hidden: false },
            ]]
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val(),
                departmentId: _itemId
            }
            //取消选择
            $gridTable.datagrid('unselectAll');
            $gridTable.datagrid('uncheckAll');
            $gridTable.datagrid('load', getSoSo());

        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    function getSoSo() {

        var condition = $("#queryCondition").find('.dropdown-text').attr('data-value');
        var keyword = $("#txt_Keyword").val();
        var departmentId = _itemId;

        var jsonStr;
        jsonStr = '{"Conditions":[';
        jsonStr += '{"Key":"' + condition + '","Value":"' + keyword + '","IsLike":"false"},';
        jsonStr += '{"Key":"DepartmentId","Value":"' + _itemId + '","IsLike":"false"}';
        jsonStr += ']}';

        return JSON.parse(jsonStr);

        //var soso = $("#searchbar").getQueryParmsAll();
        //var len = soso.Conditions.length ? soso.Conditions.length : 0;
        ////soso.Conditions[len] = { Key: "", isLike: false, Value: "" };
        ////soso.signs=1;
        //return soso;
    }

    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加用户员工表',
            url: '../../BaseManage/Person/PersonForm?departmentId=' + _itemId,
            width: '800px',
            height: '550px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //导出
    function btn_export() {
        dialogOpen({
            id: 'ExcelIExportDialog',
            title: '导出用户员工表',
            url: '/Utility/ExcelExportForm?gridId=gridTable&filename=用户员工表',
            width: '500px',
            height: '380px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }, btn: ['导出Excel', '关闭']
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').easyUiGridRowValue('UserId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑用户员工表',
                url: '../../BaseManage/Person/PersonForm?keyValue=' + keyValue,
                width: '800px',
                height: '550px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').easyUiGridRowValue('UserId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../BaseManage/Person/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                }
            })
        } else {
            dialogMsg('请选择需要删除的用户员工表！', 0);
        }
    }

    //禁用
    function btn_disabled(keyValue) {
        if (keyValue == undefined) {
            keyValue = $("#gridTable").easyUiGridRowValue("UserId");
        }
        if (checkedRow(keyValue)) {
            $.ConfirmAjax({
                msg: "注：您确定要【禁用】员工？",
                url: "../../BaseManage/Person/DisabledEnCode",
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                }
            })
        }
    }
    //启用
    function btn_enabled(keyValue) {
        if (keyValue == undefined) {
            keyValue = $("#gridTable").easyUiGridRowValue("UserId");
        }
        if (checkedRow(keyValue)) {
            $.ConfirmAjax({
                msg: "注：您确定要【启用】员工？",
                url: "../../BaseManage/Person/EnabledEnCode",
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                }
            })
        }
    }
</script>
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'west',split:true" style="width: 200px;">
        <div class="west-Panel">
            <div class="panel-Title">分类</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div data-options="region:'center',border:false" style="background:#fafafa;">
        <div class="easyui-layout" data-options="fit:true">
            <div data-options="region:'north',border:false" style="height:92px;overflow: hidden;">
                <div class="panel-Title">
                    部门 - <span id="titleinfo">未选择部门</span>
                </div>

                <div class="titlePanel">
                    <!-- 注：position必须修改为fixed，下拉菜单才不会被隐藏-->
                    <div class="title-search" style="position:fixed;z-index:2;">
                        <table>
                            <tr>
                                <td>
                                    <div id="queryCondition" class="btn-group">
                                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a data-value="RealName">姓名</a></li>
                                            <li><a data-value="carCode">身份证</a></li>
                                        </ul>
                                    </div>
                                </td>
                                <td style="padding-left: 2px;">
                                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                                </td>
                                <td style="padding-left: 5px;">
                                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="toolbar" style="position:fixed;z-index:1;">
                        <div class="btn-group">
                            <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>

                            @*<a id="lr-more" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-reorder"></i>&nbsp;更多<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu pull-right">

                                <li id="lr-disabled"><a onclick="btn_disabled()"><i></i>&nbsp;禁用工号</a></li>
                                <li id="lr-enabled"><a onclick="btn_enabled()"><i></i>&nbsp;启用工号</a></li>
                            </ul>*@
                        </div>
                        @*<script>$('.toolbar').authorizeButton()</script>*@
                    </div>
                </div>
            </div>
            <div data-options="region:'center',border:false">
                <table id="gridTable"></table>
            </div>
        </div>
    </div>
</div>