@{;
    ViewBag.Title = "信用记录:表单页面";
    Layout = "~/Views/Shared/_FormEasyui.cshtml";
}
<script>
    var keyValue = request('keyValue');
    var look = request('look');
    $(function () {

        initControl();
        if (look == 1) {
            $("#form2").find('.form-control,.ui-select,input').attr('readonly', 'readonly');
        }
    });
    //初始化控件
    function initControl() {
        //表单下拉框通用方法-数据字典
        LoadDataItemValue("jiaoYu", "C_jiaoYu");
        LoadDataItemValue("jiaTing", "C_jiaTing");
        LoadDataItemValue("zhiYe", "C_zhiYe");
        LoadDataItemValue("jiangKang", "C_YN");

        LoadDataItemValue("caiChan", "C_FangChe");
        LoadDataItemValue("yinHangWY", "C_YN");
        LoadDataItemValue("gongGongWY", "C_YN");
        LoadDataItemValue("danBaoJL", "C_YN");
        LoadDataItemValue("xinYongWY", "C_YN");
        LoadDataItemValue("siFaJL", "C_YN");

        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../CreditManage/CreditWrite/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form2").SetWebControls(data);
                }
            })
        }
    }
    function SelectPerson() {
        dialogOpen({
            id: "PersonIndexSelect",
            title: '选择参照',
            url: '/BaseManage/Person/PersonIndexSelect',
            width: "900px",
            height: "600px",
            callBack: function (iframeId) {
                top.frames[iframeId].getSelecteds(function (data) {

                    var rows = JSON.parse(data);   //console.info(data);
                    //userID carCode userName
                    $("#userID").val(rows[0].UserId);
                    $("#userName").val(rows[0].RealName);
                    $("#carCode").val(rows[0].carCode);
                });
            },
            btn: ['确认选中', '关闭']
        });
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form2').Validform()) {
            return false;
        }
        var postData = $("#form2").GetWebControls(keyValue);
        if (!checkfloat(postData.xinDai)) {
            dialogMsg("个人信贷记录 录入不正确", 0);
            return false;
        }
        var tt = parseFloat(postData.xinDai);
        if (tt >= 60 && tt <= 100)
        {

        } else {
            dialogMsg("个人信贷记录 录入范围是:60-100", 0);
            return false;
        }

        $.SaveForm({
            url: "../../CreditManage/CreditWrite/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$('#gridTable').datagrid('reload');
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#BaseInfo" data-toggle="tab">基本信息</a></li>
        <li><a href="#StatusInfo" data-toggle="tab">状态信息</a></li>
    </ul>
    <div class="tab-content" style="padding-top: 15px;">
        <div id="BaseInfo" class="tab-pane active">
            <form id="form2">


                <div class="column"><span class="current" style="left: 10px;">信贷用户</span></div>
                <table class="form">
                    <tr>
                        <td class="formTitle">年度</td>
                        <td class="formValue">
                            <input id="iYear" readonly type="text" class="form-control input-wdatepicker"
                                   onfocus="WdatePicker({ dateFmt: 'yyyy' })">
                            @*<input id="iYear" type="text" class="form-control" />*@
                            <input id="id" type="hidden" class="form-control" />
                            <input id="userID" type="hidden" class="form-control" />
                        </td>

                        <td class="formTitle">姓名</td>
                        <td class="formValue" style="position:relative;">
                            <input id="userName" type="text" class="form-control" readonly isvalid="yes" checkexpession="NotNull" />
                            <a href="javascript:;" onclick="SelectPerson()" class="searchbox-buttonV" icon-index="0" tabindex="-1"></a>

                        </td>
                        <td class="formTitle">身份证</td>
                        <td class="formValue">
                            <input id="carCode" type="text" class="form-control" readonly />
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">备注</td>
                        <td class="formValue" colspan="2">
                            <input id="strMemo" type="text" class="form-control" />
                        </td>
                    </tr>
                </table>

                <div class="column"><span class="current" style="left: 10px;">个人还贷能力</span></div>

                <table class="form">

                    <tr>
                        <td class="formTitle">收入水平</td>
                        <td class="formValue">
                            <input id="shouRu" type="text" class="form-control" placeholder="年收入水平、含奖金"
                                   isvalid="yes" checkexpession="Double" />
                        </td>

                        <td class="formTitle">教育程度</td>
                        <td class="formValue">
                            <div id="jiaoYu" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>
                        <td class="formTitle">家庭状况</td>
                        <td class="formValue">
                            <div id="jiaTing" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">职业</td>
                        <td class="formValue">
                            <div id="zhiYe" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>


                        <td class="formTitle">消费水平</td>
                        <td class="formValue">
                            <input id="xiaoFei" type="text" class="form-control" placeholder="年消费金额" />
                        </td>

                        <td class="formTitle">健康状况</td>
                        <td class="formValue">

                            <div id="jiangKang" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">家庭财产</td>
                        <td class="formValue">

                            <div id="caiChan" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>


                        <td class="formTitle">个人信贷记录</td>
                        <td class="formValue">
                            <input id="xinDai" type="text" class="form-control" placeholder="60-100" />
                        </td>
                    </tr>


                </table>

                <div class="column"><span class="current" style="left: 10px;">个人还贷意愿</span></div>

                <table class="form">
                    <tr>
                        <td class="formTitle">银行金融违约</td>
                        <td class="formValue">

                            <div id="yinHangWY" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>

                        <td class="formTitle">公共违约记录</td>
                        <td class="formValue">

                            <div id="gongGongWY" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>
                        <td class="formTitle">信用担保记录</td>
                        <td class="formValue">
                            <div id="danBaoJL" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>

                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">信用卡违约</td>
                        <td class="formValue">

                            <div id="xinYongWY" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>
                        <td class="formTitle">司法记录</td>
                        <td class="formValue">
                            <div id="siFaJL" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                        </td>


                    </tr>
                </table>

            </form>
        </div>
        <div id="StatusInfo" class="tab-pane ">
            <table class="form">
                <tr>
                    <th class="formTitle">创建时间</th>
                    <td class="formValue">
                        <input id="CreateDate" type="text" class="form-control" readonly>
                    </td>
                    <th class="formTitle">创建人</th>
                    <td class="formValue">
                        <input id="CreateUserId" type="hidden">
                        <input id="CreateUserName" type="text" class="form-control" readonly>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">修改时间</th>
                    <td class="formValue">
                        <input id="ModifyDate" type="text" class="form-control" readonly>
                    </td>
                    <th class="formTitle">修改人</th>
                    <td class="formValue">
                        <input id="ModifyUserId" type="hidden">
                        <input id="ModifyUserName" type="text" class="form-control" readonly>
                        <input id="isDelete" type="hidden" class="form-control" />
                        <input id="fenShu" type="hidden" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
