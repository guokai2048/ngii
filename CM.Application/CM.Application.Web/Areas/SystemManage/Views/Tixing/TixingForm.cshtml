@{;
    ViewBag.Title = "证件提醒:表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    $(function () {
        initControl();
    });
    //初始化控件
    function initControl() {
        //表单下拉框通用方法-数据字典
        $("#tixingType").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson",
            param: { EnCode: "DocumentType" },
            id: "ItemValue",
            text: "ItemName",
            description: "==请选择==",
            height: "200px"
        });
        //实例://<div id="stuGrades" type="select" class="ui-select"  isvalid ="yes" checkexpession ="NotNull" ></div>


        //表单下拉框通用方法-Tree
        //$("#_parentId").ComboBoxTree({
        //    url:"../../BaseManage/InventoryClass/GetTreeJson",
        //    description: " == 请选择 == ",
        //    height: "240px",
        //    allowSearch: true
        //});
        //实例:<div id="_parentId" type="selectTree" class="ui-select" isvalid ="yes" checkexpession ="NotNull" ></div>


        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../SystemManage/Tixing/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data);
                }
            })
        }
    }
    //选择接收人
    function Search_User() {
        dialogOpen({
            id: "Search_User",
            title: '选择接收人',
            url: '/BaseManage/User/IndexSelect',
            width: "900px",
            height: "600px",
            callBack: function (iframeId) {
                top.frames[iframeId].getSelecteds(function (data) {
                    var rows = JSON.parse(data);
                    var ids = [];
                    var names = [];
                    for (var i = 0; i < rows.length; i++) {
                        ids.push(rows[i].UserId);
                        names.push(rows[i].RealName);
                    }
                    $("#receivers").val(ids.join(','));
                    $("#receiversName").val(names.join(','));
                });
            },
            btn: ['确认选中', '关闭']
        });
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        $.SaveForm({
            url: "../../SystemManage/Tixing/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$('#gridTable').datagrid('reload');
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#BaseInfo" data-toggle="tab">基本信息</a></li>
        <li><a href="#StatusInfo" data-toggle="tab">状态信息</a></li>
    </ul>
    <div class="tab-content" style="padding-top: 15px;">
        <div id="BaseInfo" class="tab-pane active">
            <table class="form">
                <tr>
                    <td class="formTitle">提醒标题<font face="宋体">*</font></td>
                    <td class="formValue">
                        <input id="tixingTitle" type="text" class="form-control" isvalid="yes" checkexpession="NotNull"/>
                    </td>
                    <td class="formTitle">提醒类型<font face="宋体">*</font></td>
                    <td class="formValue">
                        <div id="tixingType" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
                    </td>
                </tr>
                <tr>
                    <td class="formTitle">提前天数<font face="宋体">*</font></td>
                    <td class="formValue">
                        <input id="aheadDays" type="text" class="form-control" isvalid="yes" checkexpession="NotNull"/>
                    </td>
                    <td class="formTitle">接收人</td>
                    <td class="formValue">
                        <input id="receivers" type="hidden" />
                        <input id="receiversName" type="text" class="form-control input-search" onclick="Search_User();" isvalid="yes" checkexpession="NotNull" />
                    </td>
                </tr>
                
                <tr>
                    <td class="formTitle">备注</td>
                    <td class="formValue" colspan="3">
                        <input id="strMemo" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div id="StatusInfo" class="tab-pane ">
            <table class="form">
                <tr>
                    <th class="formTitle">创建时间</th>
                    <td class="formValue"><input id="CreateDate" type="text" class="form-control" readonly></td>
                    <th class="formTitle">创建人</th>
                    <td class="formValue">
                        <input id="CreateUserId" type="hidden">
                        <input id="CreateUserName" type="text" class="form-control" readonly>

                    </td>
                </tr>
                <tr>
                    <th class="formTitle">修改时间</th>
                    <td class="formValue"><input id="ModifyDate" type="text" class="form-control" readonly></td>
                    <th class="formTitle">修改人</th>
                    <td class="formValue">
                        <input id="ModifyUserId" type="hidden">
                        <input id="ModifyUserName" type="text" class="form-control" readonly>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

