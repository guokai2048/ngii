@{;
    ViewBag.Title = "证件提醒:列表页面";
    Layout = "~/Views/Shared/_LayoutIndexEasyui.cshtml";
}
<script>;
    $(function () {
         GetGrid();
    });
    //加载表格
    function GetGrid() {
        //加载表格grid
        var $gridTable = $('#gridTable');
        $gridTable.datagrid({
            fit:true, 
            idField: 'id', 
            rownumbers: true, 
            emptyMsg: '<div style="color:red; padding:4px; border-bottom:#ccc 1px solid;">无相关数据!</div>',
            sortName: 'id', 
            sortOrder: 'desc', 
            singleSelect: true, 
            nowrap: false, 
            url: "../../SystemManage/Tixing/GetDataGridJsonV1",
            columns: [[
                { title: 'ID', field: 'id', checkbox: true  },
                {
                    title: '证件类型', field: 'tixingType', width: 100, align: 'left', sortable: false, hidden: false,
                    formatter: function (cellvalue, options, rowObject) {
                        return top.clientdataItem["DocumentType"][cellvalue] == undefined ? "" : top.clientdataItem["DocumentType"][cellvalue];
                    }
                },
                { title: '提醒标题', field: 'tixingTitle', width: 100, align: 'left', sortable: false, hidden: false },
                { title: '提醒内容', field: 'tixingContent', width: 100, align: 'left', sortable: false, hidden: true },
                { title: '提前天数', field: 'aheadDays', width: 100, align: 'left', sortable: false, hidden: false },
                { title: '接收人ID', field: 'receivers', width: 100, align: 'left', sortable: false, hidden: true },
                { title: '接收人姓名', field: 'receiversName', width: 150, align: 'left', sortable: false, hidden: false },
                { title: '备注', field: 'strMemo', width: 100, align: 'left', sortable: false, hidden: false },
                { title: '创建时间', field: 'CreateDate', width: 130, align: 'left', sortable: false, hidden: false },
                { title: '创建人', field: 'CreateUserName', width: 100, align: 'left', sortable: false, hidden: false },
                { title: '最后修改时间', field: 'ModifyDate', width: 130, align: 'left', sortable: false, hidden: false },
                { title: '最后修改人', field: 'ModifyUserName', width: 100, align: 'left', sortable: false, hidden: false }
            ]]
        });
        //$gridTable.authorizeColModel();//列表数据权限 
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加证件提醒',
            url: '../../SystemManage/Tixing/TixingForm',
            width: '800px',
            height: '550px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    ////新增
    //function btn_add_TT() {
    //    top.tablist.newTab({
    //        id: "OrderForm",
    //        title: "新增订单",
    //        closed: true,
    //        replace: true,
    //        icon: "fa fa-file-text-o",
    //        url: ""
    //    });
    //}
    //导出
    function btn_export() {
        dialogOpen({
            id: 'ExcelIExportDialog',
            title: '导出证件提醒',
            url: '/Utility/ExcelExportForm?gridId=gridTable&filename=证件提醒',
            width: '500px',
            height: '380px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }, btn: ['导出Excel', '关闭']
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').easyUiGridRowValue('id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑证件提醒',
                url: '../../SystemManage/Tixing/TixingForm?keyValue=' + keyValue,
                width: '800px',
                height: '550px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').easyUiGridRowValue('id');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SystemManage/Tixing/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                }
            })
        } else {
            dialogMsg('请选择需要删除的证件提醒！', 0);
        }
    }
</script>
@*------------------------------JavaScript方法结束------------------------------*@
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region: 'north', border: false" style="height: 60px; overflow: hidden;"> 
        <div class="titlePanel">
            <div class="toolbar">
                <div class="btn-group">
                    <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                    <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                    <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                    <a id="lr-export" class="btn btn-default" onclick ="btn_export()" ><i class="fa fa-sign-out" ></i>&nbsp;导出</a>
                </div>
                @*<script>$('.toolbar').authorizeButton()</script>*@
            </div>
        </div>
    </div>
    <div data-options="region:'center',border: false" > 
        <table id="gridTable"></table> 
    </div> 
</div>
