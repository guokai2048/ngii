@{
    ViewBag.Title = "分类管理";
    Layout = "~/Views/Shared/_IndexEasyui.cshtml";
}
<script>
    $(function () {
        GetGrid();
    });
    //加载表格
    function GetGrid() {
        var $gridTable = $('#gridTable');
        $gridTable.treegrid({
            fit: true,
            idField: 'DepartmentId',
            treeField: 'FullName',
            rownumbers: true,
            singleSelect: true,
            nowrap: false,
            url: "../../BaseManage/Department/GetTreeListJson",
            columns: [[
                { title: '主键', field: 'DepartmentId', hidden: true },
                { title: '公司Id', field: 'OrganizeId', hidden: true },
                { title: '排序', field: 'Sort', hidden: true },
                { title: "分类名称", field: "FullName", width: 200, align: "left", sortable: false },
                { title: "分类编号", field: "EnCode", width: 100, align: "left", sortable: false },

                { title: "SAP映射号", field: "EnCodeERP", width: 80, align: "left", sortable: false },

                { title: "分类简称", field: "ShortName", width: 100, align: "left", sortable: false },
                { title: "分类性质", field: "Nature", width: 100, align: "left", sortable: false },
                { title: "负责人", field: "Manager", width: 100, align: "left", sortable: false },
                { title: "电话号", field: "OuterPhone", width: 100, align: "left", sortable: false },

                { title: "分类代号", field: "EnCodeDM", width: 60, align: "center", sortable: false },

                { title: "分机号", field: "InnerPhone", width: 60, align: "center", sortable: false },
                { title: "备注", field: "Description", width: 200, align: "left", sortable: false }
            ]]
        });
        //$gridTable.authorizeColModel();
        //查询条件设置
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            $gridTable.treegrid('load', {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val()
            });
        });
        //查询回车事件
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        var keyValue = $("#gridTable").easyUiGridRowValue("DepartmentId");
        //if (checkedRow(keyValue))
        //{
        var organizeId = $("#gridTable").easyUiGridRowValue("OrganizeId");
        var _parentId = $("#gridTable").easyUiGridRowValue("DepartmentId");
        var sort = $("#gridTable").easyUiGridRowValue("Sort");
        if (sort == 'Organize') {
            parentId = 0;
        }
        dialogOpen({
            id: "Form",
            title: '添加分类',
            url: '/BaseManage/Department/Form?departmentId=' + keyValue + "&organizeId=" + organizeId + "&_parentId=" + _parentId,
            width: "700px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
        //}
    };
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable").easyUiGridRowValue("DepartmentId");
        if (checkedRow(keyValue)) {
            var sort = $("#gridTable").easyUiGridRowValue("Sort");
            if (sort == 'Organize') {
                return false;
            }
            dialogOpen({
                id: "Form",
                title: '编辑分类',
                url: '/BaseManage/Department/Form?keyValue=' + keyValue,
                width: "700px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").easyUiGridRowValue("DepartmentId");
        if (keyValue) {
            var sort = $("#gridTable").easyUiGridRowValue("Sort");
            if (sort == 'Organize') {
                return false;
            }
            $.RemoveForm({
                url: "../../BaseManage/Department/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').treegrid('reload');
                    $('#gridTable').datagrid('uncheckAll');
                    $('#gridTable').datagrid('unselectAll');
                }
            })
        } else {
            dialogMsg('请选择需要删除的分类！', 0);
        }
    }
</script>
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north',border:false" style="height:60px;overflow: hidden;">
        <div class="titlePanel">
            <!-- 注：position必须修改为fixed，下拉菜单才不会被隐藏-->
            <div class="title-search" style="position:fixed;z-index:2;">
                <table>
                    <tr>
                        <td>
                            <div id="queryCondition" class="btn-group">
                                <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a data-value="FullName">分类名称</a></li>
                                    <li><a data-value="EnCode">分类编号</a></li>
                                    <li><a data-value="ShortName">分类简称</a></li>
                                </ul>
                            </div>
                        </td>
                        <td style="padding-left: 2px;">
                            <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                        </td>
                        <td style="padding-left: 5px;">
                            <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="toolbar">
                <div class="btn-group">
                    <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                    <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                    <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                </div>
                @*<div class="btn-group">
                        <a id="lr-delete11" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-sitemap"></i>&nbsp;组织架构图</a>
                    </div>*@
                <script>$('.toolbar').authorizeButton()</script>
            </div>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <table id="gridTable"></table>
    </div>
</div>