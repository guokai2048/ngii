@{
    ViewBag.Title = "用户组管理";
    Layout = "~/Views/Shared/_IndexEasyui.cshtml";
}
<script>
    $(function () {
        GetGrid();
    });

    //加载表格
    function GetGrid() {
        var $gridTable = $('#gridTable');
        $gridTable.datagrid({
            fit: true,
            idField: 'RoleId',
            rownumbers: true,
            pagination: true,
            pageSize: 20,
            pageList: [20, 50, 100],
            sortName: 'RoleId',
            sortOrder: 'desc',
            singleSelect: true,
            nowrap: false,
            url: "../../BaseManage/UserGroup/GetPageListJson",
            columns: [[
                { title: '主键', field: 'RoleId', hidden: true },
                { title: '组编号', field: 'EnCode', width: 100, align: 'left' },
                { title: '组名称', field: 'FullName', width: 200, align: 'left' },
                {
                    title: '所在公司', field: 'OrganizeId', width: 250, align: 'left',
                    formatter: function (value, row, index) {
                        return top.clientorganizeData[value] == null ? "" : top.clientorganizeData[value].FullName;
                    }
                },
                {
                    title: '创建时间', field: 'CreateDate', width: 130, align: 'center',
                    formatter: function (value, row, index) {
                        return formatDate(value, 'yyyy-MM-dd hh:mm');
                    }
                },
                {
                    title: "有效", field: "EnabledMark", width: 50, align: "center",
                    formatter: function (value, row, index) {
                        return value == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                { title: "组描述", field: "Description", width: 200, align: "left" }
            ]]
            
        });
        //查询条件设置
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val()
            }
            
            $gridTable.datagrid('load', {
                queryJson: JSON.stringify(queryJson)
            });
        });
        //查询回车事件
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: "Form",
            title: '添加用户组',
            url: '/BaseManage/UserGroup/Form',
            width: "500px",
            height: "360px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    };
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable").easyUiGridRowValue("RoleId");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Form",
                title: '修改用户组',
                url: '/BaseManage/UserGroup/Form?keyValue=' + keyValue,
                width: "500px",
                height: "360px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").easyUiGridRowValue("RoleId");
        if (keyValue) {
            $.RemoveForm({
                url: "../../BaseManage/UserGroup/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                }
            })
        } else {
            dialogMsg('请选择需要删除的用户组！', 0);
        }
    }
    //用户组成员
    function btn_member() {
        var keyValue = $("#gridTable").easyUiGridRowValue("RoleId");
        var RoleName = $("#gridTable").easyUiGridRowValue("FullName");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "AllotMember",
                title: '用户组成员 - ' + RoleName,
                url: '/AuthorizeManage/PermissionUserGroup/AllotMember?userGroupId=' + keyValue,
                width: "800px",
                height: "520px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //用户组授权
    function btn_authorize() {
        var keyValue = $("#gridTable").easyUiGridRowValue("RoleId");
        var RoleName = $("#gridTable").easyUiGridRowValue("FullName");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "AllotAuthorize",
                title: '用户组授权 - ' + RoleName,
                url: '/AuthorizeManage/PermissionUserGroup/AllotAuthorize?userGroupId=' + keyValue,
                width: "700px",
                height: "690px",
                btn: null
            });
        }
    }
</script>
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north',border:false" style="height:60px;overflow: hidden;">
        <div class="titlePanel">
            <!-- 注：position必须修改为fixed，下拉菜单才不会被隐藏-->
            <div class="title-search" style="position:fixed;z-index:2;">
                <table>
                    <tr>
                        <td>
                            <div id="queryCondition" class="btn-group">
                                <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a data-value="EnCode">组编号</a></li>
                                    <li><a data-value="FullName">组名称</a></li>
                                </ul>
                            </div>
                        </td>
                        <td style="padding-left: 2px;">
                            <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                        </td>
                        <td style="padding-left: 5px;">
                            <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="toolbar">
                <div class="btn-group">
                    <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                    <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                    <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                </div>
                <div class="btn-group">
                    <a id="lr-member" class="btn btn-default" onclick="btn_member()"><i class="fa fa fa-group"></i>&nbsp;组成员</a>
                    <a id="lr-authorize" class="btn btn-default" onclick="btn_authorize()"><i class="fa fa-gavel"></i>&nbsp;组授权</a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <table id="gridTable"></table>
    </div>
</div>