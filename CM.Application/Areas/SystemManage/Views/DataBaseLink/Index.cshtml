@{
    ViewBag.Title = "库连接管理";
    Layout = "~/Views/Shared/_IndexEasyui.cshtml";
}
<script>
    $(function () {
        GetGrid();
    });

    //加载表格
    function GetGrid() {
        var $gridTable = $("#gridTable");
        $gridTable.datagrid({
            fit: true,
            idField: 'DatabaseLinkId',
            rownumbers: true,
            singleSelect: true,
            nowrap: false,
            emptyMsg: '<div style="color:red;padding:4px;border-bottom:#ccc 1px solid;">无相关数据!</div>',
            url: "../../SystemManage/DataBaseLink/GetListJson",
            columns: [[
                { title: "主键", field: "DatabaseLinkId", hidden: true },
                { title: "库类型", field: "DbType", width: 100, align: "left" },
                { title: "库版本", field: "Version", width: 80, align: "left" },
                { title: "库名称", field: "DBName", width: 200, align: "left" },
                { title: "库别名", field: "DBAlias", width: 200, align: "left" },
                { title: "服务地址", field: "ServerAddress", width: 180, align: "left" },
                { title: "备注", field: "Description", width: 200, align: "left" }
            ]]
        });
        //$gridTable.authorizeColModel();
        //查询事件
        $("#btn_Search").click(function () {
            $gridTable.datagrid('load', {
                keyword: $("#txt_Keyword").val()
            });
        });
    }
    //新增
    function btn_add() {
        var parentId = $('#gridTable').easyUiGridRowValue('ItemId');
        dialogOpen({
            id: "Form",
            title: '添加连接',
            url: '/SystemManage/DataBaseLink/Form?parentId=' + parentId,
            width: "500px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    };
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').easyUiGridRowValue('DatabaseLinkId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Form",
                title: '编辑连接',
                url: '/SystemManage/DataBaseLink/Form?keyValue=' + keyValue,
                width: "500px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').easyUiGridRowValue('DatabaseLinkId');
        if (keyValue) {
            $.RemoveForm({
                url: "../../SystemManage/DataBaseLink/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                }
            })
        } else {
            dialogMsg('请选择需要删除的库连接！', 0);
        }
    }
</script>
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north',border:false" style="height:60px;overflow: hidden;">
        <div class="titlePanel">
            <div class="title-search">
                <table>
                    <tr>
                        <td>
                            <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                        </td>
                        <td style="padding-left: 5px;">
                            <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="toolbar">
                <div class="btn-group">
                    <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                    <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                    <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
        </div>
    </div>
        <div data-options="region:'center',border:false">
            <table id="gridTable"></table>
        </div>
</div>