@{;
    ViewBag.Title = "日志明细";
    Layout = "~/Views/Shared/_FormEasyui.cshtml";
}
<style>
    /*解决样式冲突*/
    .datagrid button, input, optgroup, select, textarea {
        color: initial;
    }
</style>

<script>
    var LogId = request('LogId');

    $(function () {
        initControl();

    });

    //初始化控件
    function initControl() {

        //获取表单
        if (!!LogId) {
            $.SetForm({
                url: "../../SystemManage/Log/GetFormJson/",
                param: { keyValue: LogId },
                success: function (data) {
                    //主表  
                    $("#ExecuteResultJson").val(data.ExecuteResultJson);

                }
            });
        }
    }




</script>
@*-------------------------主体layout开始-------------------------*@

<div>
    <ul class="list-group">
        <li class="list-group-item">

            <form id="form2">
                <div id="OrganizeTree" style="margin: 10px; margin-bottom: 0px;">


                    <table style="width:100%;" class="form">
                        <tr> 
                            <td class="formValue" colspan="5">
                                <textarea id="ExecuteResultJson" class="form-control" style="height: 400px;font-weight: bold;"></textarea>
                            </td>

                        </tr>
                    </table>
                </div>
            </form>
        </li>
    </ul>
</div>

