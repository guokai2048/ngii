@{
    ViewBag.Title = "编号规则管理";
    Layout = "~/Views/Shared/_IndexEasyui.cshtml";
}
<script>
    $(function () {
        GetGrid();
    });

    //加载表格
    function GetGrid() {
        var $gridTable = $('#gridTable');
        $gridTable.datagrid({
            fit:true,
            idField: 'RuleId',
            rownumbers: true,
            pagination: true,
            pageSize: 20,
            pageList: [20, 50, 100],
            sortName: 'EnCode',
            sortOrder: 'asc',
            singleSelect: true,
            nowrap: false,
            emptyMsg: '<div style="color:red;padding:4px;border-bottom:#ccc 1px solid;">无相关数据!</div>',
            url: "../../SystemManage/CodeRule/GetPageListJson",
            onDblClickRow: function (index, row) {
                $gridTable.datagrid('unselectAll');
                $gridTable.datagrid('selectRow', index);
                btn_detail();
            },
            columns: [[
                { title: '主键', field: 'RuleId', checkbox: true },
                { title: '对象编号', field: 'EnCode', width: 150, align: 'left' },
                { title: '对象名称', field: 'FullName', width: 200, align: 'left' },
                {
                    title: '规则方式', field: 'Mode', width: 100, align: 'left',
                    formatter: function (value, row, index) {
                        if (value == 1) {
                            return "自动";
                        } else {
                            return "可更改";
                        }
                    }
                },
                { title: '系统功能', field: 'Module', width: 100, align: 'left' },
                {
                    title: '当前流水号', field: 'CurrentNumber', width: 150, align: 'left',
                    formatter: function (value, row, index) {
                        if (value) {
                            return value;
                        } else {
                            return "<span class=\"label label-danger\">未使用</span>";
                        }
                    }
                },
                { title: "说明", field: "Description", width: 200, align: "left" },
                { title: '创建时间', field: 'CreateDate', width: 130, align: 'center' },
                { title: '创建人', field: 'CreateUserName', width: 100, align: 'center' },
                { title: '修改时间', field: 'ModifyDate', width: 130, align: 'center' },
                { title: '修改人', field: 'ModifyUserName', width: 80, align: 'center' }
            ]]
        });
        //$gridTable.authorizeColModel();
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val()
            }
            $gridTable.datagrid('load', {
                queryJson: JSON.stringify(queryJson)
            });
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: "Form",
            title: '添加编号规则',
            url: '/SystemManage/CodeRule/Form',
            width: "800px",
            height: "450px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    };
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').easyUiGridRowValue('RuleId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Form",
                title: '修改编号规则',
                url: '/SystemManage/CodeRule/Form?keyValue=' + keyValue,
                width: "800px",
                height: "450px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').easyUiGridRowValue('RuleId');
        if (keyValue) {
            $.RemoveForm({
                url: "../../SystemManage/CodeRule/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                    $('#gridTable').datagrid('uncheckAll');
                    $('#gridTable').datagrid('unselectAll');
                }
            })
        } else {
            dialogMsg('请选择需要删除的数据！', 0);
        }
    }
    //详细
    function btn_detail() {
        var keyValue = $('#gridTable').easyUiGridRowValue('RuleId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Detail",
                title: '编号规则信息',
                url: '/SystemManage/CodeRule/Detail?keyValue=' + keyValue,
                width: "750px",
                height: "480px",
                btn: null
            });
        }
    }
</script>
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north',border:false" style="height:60px;overflow: hidden;">
        <div class="titlePanel">
            <!-- 注：position必须修改为fixed，下拉菜单才不会被隐藏-->
            <div class="title-search" style="position:fixed;">
                <table>
                    <tr>
                        <td>
                            <div id="queryCondition" class="btn-group">
                                <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a data-value="EnCode">对象编号</a></li>
                                    <li><a data-value="FullName">对象名称</a></li>
                                </ul>
                            </div>
                        </td>
                        <td style="padding-left: 2px;">
                            <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                        </td>
                        <td style="padding-left: 5px;">
                            <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="toolbar">
                <div class="btn-group">
                    <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                    <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                    <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                    <a id="lr-detail" class="btn btn-default" onclick="btn_detail()"><i class="fa fa-list-alt"></i>&nbsp;详细</a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
        </div>
    </div>
    <div data-options="region:'center',border:false" >
        <table id="gridTable"></table>
        
    </div>
</div>
