@{
    ViewBag.Title = "公告管理";
    Layout = "~/Views/Shared/_LayoutIndexEasyui.cshtml";
}
<script>
    $(function () {
        GetGrid();
    });

    //加载表格
    function GetGrid() {
        var $gridTable = $("#gridTable");
        $gridTable.datagrid({
            fit: true,
            idField: 'NewsId',
            rownumbers: true,
            pagination: true,
            pageSize: 50,
            pageList: [50, 100, 300],
            sortName: 'ReleaseTime',
            sortOrder: 'desc',
            singleSelect: true,
            nowrap: false,
            url: "../../PublicInfoManage/Notice/GetPageListJson",
            emptyMsg: '<div style="color:red;padding:4px;border-bottom:#ccc 1px solid;">无相关数据!</div>',
            onDblClickRow: function (index, row) {
                $gridTable.datagrid('unselectAll');
                $gridTable.datagrid('selectRow', index);
                btn_detail();
            },
            columns: [[
                { title: '主键', field: 'NewsId', checkbox: true },
                {
                    title: '公告标题', field: 'FullHead', width: 600, align: 'left',
                    formatter: function (value, row, index) {
                        return '<p style="color: ' + row.FullHeadColor + ';">' + value + '</p>';
                    }
                },
                { title: '公告类别', field: 'Category', width: 100, align: 'center' },
                { title: "发布时间", field: "ReleaseTime", width: 140, align: 'center' },
                { title: '信息来源', field: 'SourceName', width: 100, align: 'center',hidden: true },
                { title: '阅读次数', field: 'PV', index: 'PV', width: 80, align: 'center',hidden: true },
                {
                    title: "发布状态", field: "EnabledMark", width: 80, align: "center",
                    formatter: function (value, row, index) {
                        if (value == 1) {
                            return "<span class=\"label label-success\">已发布</span>";
                        } else {
                            return "<span class=\"label label-danger\">未发布</span>";
                        }
                    }
                }
            ]]
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                FullHead: $("#txt_Keyword").val()
            }
            $gridTable.datagrid('load', {
                postData: { queryJson: JSON.stringify(queryJson) }
            });
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: "Form",
            title: '添加公告',
            url: '/PublicInfoManage/Notice/Form',
            width: "1000px",
            height: "600px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    };
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').easyUiGridRowValue('NewsId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Form",
                title: '修改公告',
                url: '/PublicInfoManage/Notice/Form?keyValue=' + keyValue,
                width: "1000px",
                height: "600px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').easyUiGridRowValue('NewsId');
        if (keyValue) {
            $.RemoveForm({
                url: "../../PublicInfoManage/Notice/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                    $('#gridTable').datagrid('uncheckAll');
                    $('#gridTable').datagrid('unselectAll');
                }
            })
        } else {
            dialogMsg('请选择需要删除的公告！', 0);
        }
    }
    //详细
    function btn_detail() {
        var keyValue = $("#gridTable").easyUiGridRowValue("NewsId");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Detail",
                title: '通知公告详情',
                url: '/PublicInfoManage/Notice/Detail?keyValue=' + keyValue,
                width: "1000px",
                height: "600px",
                btn: null
            });
        }
    }
    //发布
    function btn_enable(mode) {
        var keyValue = $("#gridTable").easyUiGridRowValue("NewsId");
        if (checkedRow(keyValue)) {
            var msg;
            if (mode == 1) {
                msg = "注：您确认要发布选中的记录？";
            } else {
                msg = "注：您确认要取消发布选中的记录？";
            }

            $.ConfirmAjax({
                msg: msg,
                url: '../../PublicInfoManage/Notice/EnableForm',
                param: { keyValue: keyValue, opeState: mode },
                success: function (data) {
                    $('#gridTable').datagrid('reload');
                }
            })
        }
    }

</script>
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region: 'north', border: false" style="height: 60px; overflow: hidden;">
        <div class="titlePanel">
            <div class="title-search">
                <table>
                    <tr>
                        <td>
                            <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                        </td>
                        <td style="padding-left: 5px;">
                            <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="toolbar">
                <div class="btn-group">
                    <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                    <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                    <a id="lr-detail" class="btn btn-default" onclick="btn_detail()"><i class="fa fa-list-alt"></i>&nbsp;详细</a>
                    <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                    <a id="lr-enable" class="btn btn-default" onclick="btn_enable(1)"><i class="fa fa-plus-square"></i>&nbsp;发布</a>
                    <a id="lr-cancel" class="btn btn-default" onclick="btn_enable(2)"><i class="fa fa-minus-square"></i>&nbsp;取消发布</a>
                </div>
                @*<script>$('.toolbar').authorizeButton()</script>*@
            </div>
        </div>
    </div>
    <div data-options="region:'center',border: false">
        <table id="gridTable"></table>
    </div>
</div>
